---
import "../styles/global.css";

interface Props {
	title?: string;
}

const { title = "Pixelart Converter" } = Astro.props;
---

<!doctype html>
<html lang="ja-JP" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-base-100 flex flex-col">
		<!-- ヘッダー部分 -->
		<header class="bg-base-200 shadow-md">
			<div class="container mx-auto px-4 py-3">
				<div
					class="flex flex-col md:flex-row justify-between items-center gap-4"
				>
					<!-- アプリ名とロゴ -->
					<div class="flex items-center">
						<img
							src="/favicon.svg"
							alt="Pixelart Converter Logo"
							class="w-8 h-8 mr-2"
						/>
						<h1 class="text-2xl font-bold text-primary">
							Pixelart Converter
						</h1>
					</div>

					<!-- ナビゲーション -->
					<nav class="flex-grow">
						<ul class="flex justify-center space-x-6">
							<li>
								<a
									href="/"
									class="hover:text-primary transition-colors"
									>ホーム</a>
							</li>
							<li>
								<a
									href="/gallery"
									class="hover:text-primary transition-colors"
									>ギャラリー</a>
							</li>
							<li>
								<a
									href="/about"
									class="hover:text-primary transition-colors"
									>使い方</a>
							</li>
						</ul>
					</nav>

					<!-- ユーザーアクション -->
					<div class="flex items-center space-x-4">
						<button
							class="btn btn-sm btn-ghost"
							aria-label="テーマ切替"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
								class="w-5 h-5"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"
								></path>
							</svg>
						</button>
						<button class="btn btn-sm btn-primary">ログイン</button>
					</div>
				</div>
			</div>
		</header>

		<!-- メインコンテンツ領域 -->
		<main class="flex-grow container mx-auto px-4 py-6">
			<slot />
		</main>

		<!-- フッター -->
		<footer class="bg-base-200 py-4">
			<div class="container mx-auto px-4 text-center text-sm">
				<p>&copy; 2025 Pixelart Converter. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>
